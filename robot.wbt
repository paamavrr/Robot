Robot {
  name "SimpleQuadruped"
  translation 0 0 0.2   # Elevado para compensar patas más largas
  controller "my_controller"
  boundingObject Box { size 0.3 0.2 0.08 }
  physics Physics { mass 1 }
  children [
    # Cuerpo en el origen
    Solid {
      name "body"
      translation 0 0 0
      children [
        DEF BODY_SHAPE Shape {
          geometry Box {
            size 0.3 0.2 0.08
          }
          appearance PBRAppearance { baseColor 0.7 0.7 0.7 }
        }
      ]
      boundingObject USE BODY_SHAPE
      physics Physics {
        mass 3
      }
    }
    # Pata delantera izquierda
    HingeJoint {
      jointParameters HingeJointParameters {
        axis 0 1 0
        anchor 0.15 0.1 -0.04
      }
      device [
        RotationalMotor { name "LF_motor" }
      ]
      endPoint Solid {
        name "LF_leg"
        translation 0.15 0.1 -0.12   # Posición Y ajustada para pata más larga
        contactMaterial "rubber"
        children [
          Shape {
            geometry Box {
              size 0.05 0.02 0.24    # Altura aumentada de 0.16 a 0.24
            }
            appearance PBRAppearance { baseColor 0.2 0.2 1 }
          }
          TouchSensor {
            name "LF_touch"
            type "bumper"
            translation 0 0 -0.12     # Ajustado para nueva longitud
            boundingObject Box { size 0.05 0.02 0.005 }            
          }
        ]
        boundingObject Box { size 0.05 0.02 0.24 }   # Ajustado boundingObject
        physics Physics { mass 0.1 }
      }
    }
